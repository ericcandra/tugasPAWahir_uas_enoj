<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <style>
        table{
            width: 100%;
            border-collapse: collapse;
        }
        th,td {
            border: 1px solid rgb(28, 30, 29);
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: rgb(54, 91, 147);
        }
    </style>
</head>
<h1>Buku</h1>
<form action="/buku/store" method="POST">
    <div class="mb-3">
      <label for="nama" class="form-label">Nama Buku</label>
      <input type="text" class="form-control" id="nama" name="nama" placeholder="Nama Buku" required />
    </div>
    <div class="mb-3">
      <label for="penulis" class="form-label">Penulis</label>
      <input
        type="text"
        class="form-control"
        id="penulis"
        name="penulis"
        placeholder="Penulis"
        required
      />
    </div>
    <div class="mb-3">
        <label for="tahun" class="form-label">Tahun</label>
        <input
          type="text"
          class="form-control"
          id="tahun"
          name="tahun"
          placeholder="Tahun"
          required
        />
      </div>
      <div class="mb-3">
        <label for="jenis" class="form-label">Jenis Buku</label>
        <input
          type="text"
          class="form-control"
          id="jenis"
          name="jenis"
          placeholder="jenis buku"
          required
        />
      </div>
    <button type="submit" class="btn btn-primary">Tambah Buku</button>
  </form>
<h1>Edit Buku</h1>
  <form action="/buku/update/<%= buku.id %>" method="POST">
      <label for="nama">Nama Buku:</label>
      <input type="text" id="nama" name="nama" value="<%= buku.nama %>" required />
  
      <label for="penulis">Penulis:</label>
      <input type="text" id="penulis" name="penulis" value="<%= buku.penulis %>" required />
  
      <label for="tahun">Tahun:</label>
      <input type="text" id="tahun" name="tahun" value="<%= buku.tahun %>" required />
  
      <label for="jenis">Jenis Buku:</label>
      <input type="text" id="jenis" name="jenis" value="<%= buku.jenis %>" required />
  
      <button type="submit">Simpan Perubahan</button>
  </form>
  
  
<table class="table table-striped">
    <tr>
        <th>Buku</th>
        <th>Penulis</th>
        <th>Tahun</th>
        <th>Jenis</th>
        <th>Aksi</th>
    </tr>
    <% buku.forEach(data => {%>
    <tr>
        <td><%= data.nama %></td>
        <td><%= data.penulis %></td>
        <td><%= data.tahun %></td>
        <td><%= data.jenis %></td>
        <td>
          <style>
            .btn {
                padding: 8px 16px;
                font-size: 14px;
                cursor: pointer;
                border: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }
        
            .btn-edit {
                background-color: #007bff; /* Warna biru */
                color: #fff; /* Warna teks putih */
            }
        
            .btn-edit:hover {
                background-color: #0056b3; /* Warna biru tua saat hover */
            }
        </style>        
          <form action="/buku/update/<%= data._id %>" method="POST" style="display: inline;">
            <input type="hidden" name="nama" value="<%= data.nama %>" />
            <input type="hidden" name="penulis" value="<%= data.penulis %>" />
            <input type="hidden" name="tahun" value="<%= data.tahun %>" />
            <input type="hidden" name="jenis" value="<%= data.jenis %>" />
            <button type="submit" class="btn btn-edit">Ubah Buku</button>
        </form>
        </td>
    </tr>
    <% }) %>
</table>