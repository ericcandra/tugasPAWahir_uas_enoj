<img src="img/enoj.jpg" alt="Gambar utama tidak tersedia. Mohon refresh ulang halaman." />

<br />
<h4 class="mb-4 text-center section-title">BUKU TERSEDIA</h4>
<div class="row">
  <% perpus.forEach(data => { %>
  <div class="col-md-4 mb-4">
    <div class="card shadow-none">
      <div class="card-body">
        <!-- Gambar buku -->
        <img 
          src="<%= data.gambar %>" 
          class="card-img-top img-book" 
          alt="Gambar tidak tersedia. Mohon refresh ulang halaman."
          onerror="this.onerror=null; this.src='https://via.placeholder.com/150?text=Gambar+Tidak+Tersedia';"
        >
        <h5 class="card-title text-lg font-bold"><%= data.judul %></h5>
        <p class="card-text text-gray-700"><%= data.isi %></p>
        <button class="btn btn-primary">Lihat Buku</button>
      </div>
    </div>
  </div>
  <% }) %>
</div>


